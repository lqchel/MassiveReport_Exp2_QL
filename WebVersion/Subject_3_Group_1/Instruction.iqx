	values.Instruction_page += 1;
]
/ stimulusframes = [1 = Instruction_Page_1,Instruction_Page_1_gif,Next_button,quit_notice,continue]
/ validresponse = (57)
/ recorddata = false
/ branch = [trial.instruction_page_2]
</trial>

